<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.arsc.traceGuard.feature.mapper.TgBatchMapper">
    
    <resultMap type="TgBatch" id="TgBatchResult">
        <result property="batchId"    column="batch_id"    />
        <result property="batchNo"    column="batch_no"    />
        <result property="bizType"    column="biz_type"    />
        <result property="relationId"    column="relation_id"    />
        <result property="relationName"    column="relation_name"    />
        <result property="totalCount"    column="total_count"    />
        <result property="scanCount"    column="scan_count"    />
        <result property="activatedCount"    column="activated_count"    />
        <result property="status"    column="status"    />
        <result property="remark"    column="remark"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
        <result property="updateBy"    column="update_by"    />
    </resultMap>

    <sql id="selectTgBatchVo">
        select batch_id, batch_no, biz_type, relation_id, relation_name, total_count, scan_count, activated_count, status, remark, create_by, create_time, update_time, update_by from tg_batch
    </sql>

    <select id="selectTgBatchList" parameterType="TgBatch" resultMap="TgBatchResult">
        <include refid="selectTgBatchVo"/>
        <where>  
            <if test="batchNo != null  and batchNo != ''"> and batch_no = #{batchNo}</if>
            <if test="bizType != null  and bizType != ''"> and biz_type = #{bizType}</if>
            <if test="relationId != null "> and relation_id = #{relationId}</if>
            <if test="relationName != null  and relationName != ''"> and relation_name like concat('%', #{relationName}, '%')</if>
            <if test="totalCount != null "> and total_count = #{totalCount}</if>
            <if test="scanCount != null "> and scan_count = #{scanCount}</if>
            <if test="activatedCount != null "> and activated_count = #{activatedCount}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectTgBatchByBatchId" parameterType="Long" resultMap="TgBatchResult">
        <include refid="selectTgBatchVo"/>
        where batch_id = #{batchId}
    </select>

    <select id="selectTgBatchByBatchNo" parameterType="String" resultMap="TgBatchResult">
        <include refid="selectTgBatchVo"/>
        where batch_no = #{batchNo}
    </select>

    <update id="updateBatchStats" parameterType="map">
        update tg_batch
        set total_count = total_count + #{addCount},
            activated_count = activated_count + #{addActivatedCount},
            update_time = now()
        where batch_no = #{batchNo}
    </update>

    <update id="updateBatchStatsWithScanCount" parameterType="map">
        update tg_batch
        set activated_count = #{activatedCount},
            scan_count = #{scanCount},
            update_time = now()
        where batch_no = #{batchNo}
    </update>

    <insert id="insertTgBatch" parameterType="TgBatch" useGeneratedKeys="true" keyProperty="batchId">
        insert into tg_batch
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="batchNo != null and batchNo != ''">batch_no,</if>
            <if test="bizType != null">biz_type,</if>
            <if test="relationId != null">relation_id,</if>
            <if test="relationName != null">relation_name,</if>
            <if test="totalCount != null">total_count,</if>
            <if test="scanCount != null">scan_count,</if>
            <if test="activatedCount != null">activated_count,</if>
            <if test="status != null">status,</if>
            <if test="remark != null">remark,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="updateBy != null">update_by,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="batchNo != null and batchNo != ''">#{batchNo},</if>
            <if test="bizType != null">#{bizType},</if>
            <if test="relationId != null">#{relationId},</if>
            <if test="relationName != null">#{relationName},</if>
            <if test="totalCount != null">#{totalCount},</if>
            <if test="scanCount != null">#{scanCount},</if>
            <if test="activatedCount != null">#{activatedCount},</if>
            <if test="status != null">#{status},</if>
            <if test="remark != null">#{remark},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
         </trim>
    </insert>

    <update id="updateTgBatch" parameterType="TgBatch">
        update tg_batch
        <trim prefix="SET" suffixOverrides=",">
            <if test="batchNo != null and batchNo != ''">batch_no = #{batchNo},</if>
            <if test="bizType != null">biz_type = #{bizType},</if>
            <if test="relationId != null">relation_id = #{relationId},</if>
            <if test="relationName != null">relation_name = #{relationName},</if>
            <if test="totalCount != null">total_count = #{totalCount},</if>
            <if test="scanCount != null">scan_count = #{scanCount},</if>
            <if test="activatedCount != null">activated_count = #{activatedCount},</if>
            <if test="status != null">status = #{status},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
        </trim>
        where batch_id = #{batchId}
    </update>

    <delete id="deleteTgBatchByBatchId" parameterType="Long">
        delete from tg_batch where batch_id = #{batchId}
    </delete>

    <delete id="deleteTgBatchByBatchIds" parameterType="String">
        delete from tg_batch where batch_id in 
        <foreach item="batchId" collection="array" open="(" separator="," close=")">
            #{batchId}
        </foreach>
    </delete>
</mapper>